# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = false
quote_type = double
trim_trailing_whitespace = false

[*.{json,toml,yaml,yml}]
indent_size = 2

[*.md]
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_size = 2

[*.sql]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,htm,xml}]
indent_size = 2

[**.{ts,tsx,js,jsx,cjs,mjs}]
indent_size = 2
quote_type = double

[*.svg]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,cmd,sh}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf